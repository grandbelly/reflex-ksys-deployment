# Database Connection
# Update these to point to your TimescaleDB instance
TS_DSN=postgresql://postgres:postgres@pgai-db:5432/ecoanp?sslmode=disable
POSTGRES_CONNECTION_STRING=postgresql://postgres:postgres@pgai-db:5432/ecoanp?sslmode=disable

# Application Environment
APP_ENV=development
TZ=Asia/Seoul
VERSION_TYPE=FULL
DOCKER_ENV=true
DB_TARGET=pgai

# Feature Flags
ENABLE_AI_FEATURES=true  # Set to false to disable AI chat and insights

# Ports
REFLEX_FRONTEND_PORT=13000
REFLEX_BACKEND_PORT=13001
